{#<form id="new-appartment-position" class="form-horizontal" role="form"
      onsubmit="return createAppartmentInvoicePosition()">#}
{{ form_start(form, {'attr': {'onsubmit': 'return createApartmentInvoicePosition(this)', 'id': 'new-apartment-position'}}) }}
    <div class="modal-body">
        <div class="ps-5 pe-5">
            <div class="row">
                <div class="col-md-7">
                    {% include 'Invoices/_apartment_form.html.twig' %}
                </div>
                <div class="col-md-5">
                   {% include 'Invoices/invoice_form_reservation_list_fields.html.twig' %}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <ul class="pagination me-auto">
            <li class="page-item " onclick="
                {% if invoiceId == 'new' %}
                    return getContentForModal('{{ path('invoices.create.invoice.positions') }}')
                {% else %}
                    return showInvoice({{ invoiceId }}, true)
                {% endif %}">
                <a class="page-link" href="#">&larr; {{ 'button.back'|trans }}</a></li>
        </ul>
        <input type="submit" value="{{ 'button.save'|trans }}" class="btn btn-primary" />
    </div>
{{ form_end(form) }}
