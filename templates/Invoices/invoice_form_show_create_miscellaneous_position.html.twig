{{ form_start(form, {'attr': {'onsubmit': 'return createMiscellaneousInvoicePosition(this)', 'id': 'new-miscellaneous-position'}}) }}
    <div class="modal-body">
        <div class="pl-5 pr-5">
            <div class="row">
                <div class="col-md-7">
                    {% include 'Invoices/_miscellaneous_form.html.twig' %}
                </div>
                <div class="col-md-5">
                    {% include 'Invoices/invoice_form_reservation_list_fields.html.twig' %}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <ul class="pagination mr-auto">
            <li class="page-item " onclick="
                {% if invoiceId == 'new' %}
                    return getContentForModal('{{ path('invoices.create.invoice.positions') }}')
                {% else %}
                    return showInvoice({{ invoiceId }}, true)
                {% endif %}">
                <a class="page-link" href="#">&larr; {{ 'button.back'|trans }}</a></li>
        </ul>
        <input type="submit" value="{{ 'button.save'|trans }}" class="btn btn-primary" style="margin-top: inherit;"/>
    </div>
{{ form_end(form) }}
