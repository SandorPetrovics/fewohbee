<form id="new-miscellaneous-position" class="form-horizontal" role="form"
      onsubmit="return createMiscellaneousInvoicePosition()">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="row">
                <div class="col-md-7">
                    <p>

                    <div class="form-group">
                        <label for="amount"
                               class="col-sm-3 control-label">{{ 'invoice.miscellaneous.position.amount'|trans }}</label>

                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="amount" name="amount" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAppartmentPriceCategory"
                               class="col-sm-3 control-label">{{ 'invoice.appartment.position.pricecategory'|trans }}</label>

                        <div class="col-sm-9">
                            <select id="pricecategory" name="pricecategory" class="form-control"
                                    onchange="return setVatPriceAndDescription()">
                                <option value="0|0" selected></option>
                                {% for price in prices %}
                                    <option value="{{ price.vat|number_format(2, ',', '.') }}|{{ price.price|number_format(2, ',', '.') }}|{{ price.description }}">{{ price.description }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputDescription"
                               class="col-sm-3 control-label">{{ 'invoice.appartment.position.description'|trans }}</label>

                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="inputDescription" name="description" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputVat" class="col-sm-3 control-label">{{ 'invoice.vat'|trans }}</label>

                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="inputVat" name="vat" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPrice"
                               class="col-sm-3 control-label">{{ 'invoice.appartment.position.price'|trans }}</label>

                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="inputPrice" name="price" required>
                        </div>
                    </div>
                    </p>
                </div>
                <div class="col-md-5">
                    {% for reservation in reservations %}
                        <p>
                        <dl class="dl-horizontal">
                            <dt>{{ loop.index }}. {{ 'invoice.reservation'|trans }}</dt>
                            <dd></dd>
                            <dt>{{ 'invoice.startdate'|trans }}</dt>
                            <dd>{{ reservation.startdate|date('d.m.Y') }}</dd>
                            <dt>{{ 'invoice.enddate'|trans }}</dt>
                            <dd>{{ reservation.enddate|date('d.m.Y') }}</dd>
                            <dt>{{ 'invoice.position.stays'|trans }}</dt>
                            <dd>{{ get_date_diff_amount(reservation.startdate, reservation.enddate) }}</dd>
                            <dt>{{ 'invoice.appartment.position.persons'|trans }}</dt>
                            <dd>{{ reservation.persons }}</dd>
                            <dt>{{ 'invoice.appartment.position.beds'|trans }}</dt>
                            <dd>{{ reservation.appartment.bedsmax }}</dd>
                        </dl>
                        </p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <ul class="pager pull-left">
            <li class="previous" onclick="
                {% if invoiceId == 'new' %}
                    return showCreateInvoicePositions('false')
                {% else %}
                    return showInvoice({{ invoiceId }}, true)
                {% endif %}
                    "><a href="#">&larr; {{ 'button.back'|trans }}</a></li>
        </ul>
        <input type="submit" value="{{ 'button.save'|trans }}" class="btn btn-primary" style="margin-top: inherit;"/>
    </div>
    <input type="hidden" name="invoice-id" value="{{ invoiceId }}" />
    <input name="_csrf_token" value="{{ token }}" type="hidden">
</form>
<script>
    function showCreateInvoicePositions(createNewPositionsSessionObject) {
        var url = "{{ path('invoices.create.invoice.positions') }}";
        var content = '<div class="modal-body">' +
                '     <img src="{{ app.request.basepath }}/resources/images/ajax-loader.gif" />' +
                '</div>';

        $.ajax({
            url: url,
            type: "post",
            data: $("#new-invoice-id").serialize() + "&createInvoicePositions=" + createNewPositionsSessionObject,
            beforeSend: function () {
                $("#modal-content-ajax").html(content);
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
            },
            success: function (data) {
                $("#modal-content-ajax").html(data);
            }
        });

        return false;
    }

    function setVatPriceAndDescription() {
        var vat = $("#pricecategory").val().split("|")[0];
        var price = $("#pricecategory").val().split("|")[1];
        var description = $("#pricecategory").val().split("|")[2];

        $("#inputVat").val(vat);
        $("#inputPrice").val(price);
        $("#inputDescription").val(description);

        return false;
    }

    function createMiscellaneousInvoicePosition() {
        var url = "{{ path('invoices.create.miscellaneous.invoice.position') }}";
        var content = '<div class="modal-body">' +
                '     <img src="{{ app.request.basepath }}/resources/images/ajax-loader.gif" />' +
                '</div>';

        $.ajax({
            url: url,
            type: "post",
            data: $("#new-miscellaneous-position").serialize(),
            beforeSend: function () {
                $("#modal-content-ajax").html(content);
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
            },
            success: function (data) {
                $("#modal-content-ajax").html(data);
            }
        });

        return false;
    }
</script>