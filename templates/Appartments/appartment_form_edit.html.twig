<form id="entry-form-{{ appartment.id }}" role="form" onsubmit="return saveAppartment({{ appartment.id }})">
    <div class="modal-body pl-5 pr-5">
        <div id="flash-message-overlay">
        </div>
        <div class="row" id="edit-button-area">
            <div class="col">
                <h4 class="pb-2">
                    <small>
                    <a href="#" onclick="return enableEditForm({{ appartment.id }})"
                       title="{{ 'button.edit'|trans }}" class="float-right text-secondary">
                            <i class="fas fa-edit"></i></a>
                    </small>
                </h4>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col"> 
                {% include 'Appartments/appartment_form_input_fields.html.twig' %}
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'button.cancel'|trans }}</button>
         <input type="submit" value="{{ 'button.save'|trans }}" id="entry-submit-{{ appartment.id }}"
                class="btn btn-primary d-none">
    </div>            
</form>
