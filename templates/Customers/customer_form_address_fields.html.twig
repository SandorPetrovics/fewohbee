    <div class="col-sm-8">
        <input type="text" class="form-control" name="mobilephone-{{ customer.id }}[]"
               value="">
    </div>
</div>
<div class="row">
    <label for="fax-{{ customer.id }}" class="col-sm-4 col-form-label text-end">{{ 'customer.fax'|trans }}</label>
    <div class="col-sm-8">
