    <label for="address-{{ customer.id }}"
           class="col-sm-4 col-form-label text-end">{{ 'customer.address'|trans }}</label>
    <div class="col-sm-8">
        <input type="text" class="form-control" name="address-{{ customer.id }}[]" value="">
