{% if error %}    
    {% for type, flashMessages in app.flashes %}
        {% for flashMessage in flashMessages %}
        <div class="row">
            <div class="col-md">
                <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    {{ flashMessage|trans }}
                </div>
            </div>
        </div>
        {% endfor %}
    {% endfor %}    
    {% if attachment is defined %}
    {#  required when creating a new file as mail attachment in reservation conversations  #}
    <script>
        var isTemplateAttachment = true;
    </script>
    {% endif %}
{% endif %}