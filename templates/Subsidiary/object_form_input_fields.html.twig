<fieldset id="entry-form-fieldset-{{ object.id }}" {% if object.id != "new" %} disabled {% endif %}>
    <div class="form-group row">
        <label for="name-{{ object.id }}" class="col-sm-4 col-form-label">{{ 'object.name'|trans }} *</label>

        <div class="col-sm-8">
            <input type="text" class="form-control" name="name-{{ object.id }}" value="{{ object.name }}"
                   required>
        </div>
    </div>
    <div class="form-group row">
        <label for="description-{{ object.id }}" class="col-sm-4 col-form-label">{{ 'object.description'|trans }} *</label>

        <div class="col-sm-8">
            <input type="text" class="form-control" name="description-{{ object.id }}"
                   value="{{ object.description }}" required>
        </div>
    </div>
</fieldset>
<input name="_csrf_token" value="{{ token }}" type="hidden">