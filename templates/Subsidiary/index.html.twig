{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} -  {{ 'object.title'|trans }}
{% endblock %}

{% block description %}
    {{ parent() }} -  {{ 'object.description'|trans }}
{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-default" onclick="showCreateObjectForm()" data-toggle="modal"
                    data-target="#modalCenter">
                <i class="fas fa-plus"></i> {{ 'nav.object.add'|trans }}</button>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>{{ 'object.name'|trans }}</th>
                    <th>{{ 'object.action'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for object in objects %}
                    <tr>
                        <td>{{ object.name }}</td>
                        <td>
                            <a href="#" title="{{ 'button.details'|trans }}" data-toggle="modal" data-target="#modalCenter">
                                <i onclick="getEntity({{ object.id }})" class="fas fa-info-circle"></i></a>
                            <a href="#" title="{{ 'button.edit'|trans }}" data-toggle="modal" data-target="#modalCenter">
                                <i onclick="editEntry({{ object.id }})" class="fas fa-edit"></i></a>
                            <a href="#" title="{{ 'button.delete'|trans }}">
                                <i onclick="deleteObject({{ object.id }})" class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    <tr id="entry-{{ object.id }}" class="d-none">
                        <td colspan="6" id="entry-cell-{{ object.id }}">
                            <img src="{{ app.request.basepath }}/resources/images/ajax-loader.gif"/>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ app.request.basepath }}/resources/js/settings.js"></script>
{% endblock %}
{% block bodyjs %}
    {{ parent() }}
    <script>
        $.ajaxSetup({
            cache: false
        });
        
     $(function() {
        // the default modal width is used here
        $("#modalCenter .modal-dialog").removeClass('modal-lg');
    });

    function getEntity(id) {
        let url = replacePlaceholder("{{ path('objects.get.object', {'id': 'placeholder'}) }}", id);
        getContentForModal(url);
        
    }
    
    function editEntry(id) {
        let url = replacePlaceholder("{{ path('objects.get.object', {'id': 'placeholder'}) }}", id);
        getContentForModal(url, "", function() {
            enableEditForm(id);
        });
        
    }

    function saveObject(id) {
        var form = "#object-form-" + id;
        var url = "{{ path('objects.edit.object', {'id': 'placeholder'}) }}";
        url = url.replace("placeholder", id);

        $.ajax({
            url: url,
            type: "post",
            data: $(form).serialize(),
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
            },
            success: function (data) {
                location.reload();
            }
        });

        return false;
    }

    function deleteObject(id) {
        if (collapseEntry(id)) {
            var cell = "#entry-cell-" + id;
            var url = "{{ path('objects.delete.object', {'id': 'placeholder'}) }}";
            url = url.replace("placeholder", id);

            $(cell).load(url, function (response, status, xhr) {
                //if(status == "success") location.reload();
            });
        }


        return false;
    }

    function doDeleteEntry(id) {
        var form = "#entry-form-" + id;
        var url = "{{ path('objects.dodelete.object', {'id': 'placeholder'}) }}";
        url = url.replace("placeholder", id);

        $.ajax({
            url: url,
            type: "post",
            data: $(form).serialize(),
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
            },
            success: function (data) {
                location.reload();
            }
        });

        return false;
    }

    function showCreateObjectForm() {
        getContentForModal("{{ path('objects.new.object') }}");
    }

    function createNewObject() {
        var url = "{{ path('objects.create.object')}}";

        $.ajax({
            url: url,
            type: "post",
            data: $("#object-form-new").serialize(),
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
            },
            success: function (data) {
                if (data.length > 0) {
                    $("#flash-message-overlay").empty();
                    $("#flash-message-overlay").append(data);
                } else {
                    window.location.href = "{{ path('objects.overview') }}";
                }
            }
        });

        return false;
    }
    </script>
{% endblock %}
