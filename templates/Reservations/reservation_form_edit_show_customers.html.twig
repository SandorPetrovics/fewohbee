<table class="table table-hover">
    <tr>
        <th>{{ 'customer.firstname'|trans }}</th>
        <th>{{ 'customer.lastname'|trans }}</th>
        <th>{{ 'customer.birthday'|trans }}</th>
    </tr>
    {% for customer in customers %}
        {% if customer.id != 0 %}
            <tr class="mouse-pointer" onclick="return editReservationCustomerChange({{ customer.id }}, '{{ tab }}', {{ appartmentId }})"
                title="{{ 'button.accept'|trans }}">
                <td>{{ customer.firstname }}</td>
                <td>{{ customer.lastname }}</td>
                <td>{% if customer.birthday %} {{ customer.birthday|date('d.m.Y') }} {% endif %}</td>
            </tr>
        {% endif %}
    {% endfor %}
</table>

{% include 'paginator.html.twig' with { 'url' : '#' } %}

<script type="text/javascript">
    // enable js click for selecting pages
    $("#pagination a").click(function () {
        getCustomers($(this).attr("data-page"), 'edit', '{{ tab }}', {{ appartmentId }});
    });
</script>