<div class="modal-body">
    <div class="container-fluid">
        <div id="flash-message-overlay">
            <div class="col">
                {% include 'feedback.html.twig' with {'error': error, 'app': app } %}
            </div>
        </div>
        {% include 'Reservations/reservation_form_show_fields.html.twig' with {'mode': 'new', 'reservationId':  'new'} %}
    </div>
</div>
<div id="newReservationPreview" class="modal-footer">
    <ul class="pagination mr-auto">
        <li class="page-item" onclick="return selectCustomer()"><a class="page-link" href="#">&larr; {{ 'button.back'|trans }}</a></li>
    </ul>
    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'button.cancel'|trans }}</button>
    <input type="submit" value="{{ 'button.save'|trans }}" class="btn btn-primary" onclick="createNewReservations()"/>
</div>