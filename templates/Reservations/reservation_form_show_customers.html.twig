<table class="table table-hover">
<thead>
    <tr>
        <th>{{ 'customer.firstname'|trans }}</th>
        <th>{{ 'customer.lastname'|trans }}</th>
        <th>{{ 'customer.birthday'|trans }}</th>
    </tr>
</thead>
<tbody>
    {% for customer in customers %}
        {% if customer.id != 0 %}
            <tr onclick="return getReservationPreview({{ customer.id }})">
                <td>{{ customer.firstname }}</td>
                <td>{{ customer.lastname }}</td>
                <td>{% if customer.birthday %} {{ customer.birthday|date('d.m.Y') }} {% endif %}</td>
            </tr>
        {% endif %}
    {% endfor %}
</tbody>
</table>

{% include 'paginator.html.twig' with { 'url' : '#' } %}

<script type="text/javascript">
    // enable js click for selecting pages
    $("#pagination a").click(function () {
        getCustomers($(this).attr("data-page"));
    });
</script>