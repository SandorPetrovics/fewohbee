{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} -  {{ 'journal.title'|trans }}
{% endblock %}

{% block description %}
    {{ parent() }} -  {{ 'journal.description'|trans }}
{% endblock %}

{% block content %}
    <div class="modal fade" id="showModal">
        <div class="modal-dialog">
            <div class="modal-content" id="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">{{ 'invoice.details'|trans }}</h4>
                </div>
                <div id="modal-content-ajax">
                    <div class="modal-body">
                        <img src="{{ app.request.basepath }}/resources/images/ajax-loader.gif"/>
                    </div>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="btn-group">
                    <button type="button" class="btn btn-default" onclick="showCreateForm()"
                            data-toggle="modal" data-target="#showModal"><span
                                class="glyphicon glyphicon-plus"></span> {{ 'journal.add'|trans }}</button>
                </div>
                <div class="form-group form-inline pull-right">{{ 'journal.template'|trans }}:
                    <select id="template" name="template" class="form-control">
                        {% for template in templates %}
                            <option value="{{ template.id }}"{% if template.id == templateId %} selected{% endif %}>{{ template.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-md-offset-1">
                <form id="table-filter" class="form-inline" role="form">
                    <div class="form-group-md">                      
                        <select id="cashJournalYear" name="search" class="form-control">
                        {% for journal in journalYears %}
                            <option value="{{ journal.cashYear }}"{% if journal.cashYear == "Y"|date or search == journal.cashYear %} selected{% endif %}>{{ journal.cashYear }}</option>
                        {% endfor %}
                        </select>                        
                    </div>                             
                </form>
            </div>
        </div>
        <br />
        <div class="row">
            <div id="table-ajax" class="col-md-10 col-md-offset-1">
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            getJournalTable();
            
            $("#cashJournalYear").change(function() {
                getJournalTable();
            });
            
            $("#template").change(function () {
                changeTemplateId();
            });
        });

        $.ajaxSetup({
            cache: false
        });
        
        function changeTemplateId() {
            var templateId = $("#template").val();

            // loop through each download link
            $(".export-link").each(function (index) {
                var src = $(this).attr("href");
                var pos = src.lastIndexOf('/');
                // replace old template id with new one
                var str = src.substring(0, pos + 1) + templateId;
                // set new href
                $(this).attr("href", str);
            });
        }
        
        function getJournalTable(page) {
            var url = "{{ path('cashjournal.table.get') }}";
            var content = '<div class="modal-body">' +
                    '     <img src="{{ app.request.basepath }}/resources/images/ajax-loader.gif" />' +
                    '</div>';
            if(page === null) page = 1;
            var year = $("#cashJournalYear").val();

            $("#table-ajax").html(content);

            $.ajax({
                url: url,
                type: "get",
                data: {page: page, search: year},
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                },
                success: function (data) {
                    $("#table-ajax").html(data);
                    changeTemplateId();
                }
            });

            return false;
        }

        function showCreateForm() {
            var url = "{{ path('cashjournal.journal.new') }}";
            var content = '<div class="modal-body">' +
                    '     <img src="{{ app.request.basepath }}/resources/images/ajax-loader.gif" />' +
                    '</div>';

            $(".modal-header .modal-title").html("{{ 'journal.add'|trans }}");

            $("#modal-content-ajax").html(content);

            $.ajax({
                url: url,
                type: "get",
                data: { },
                beforeSend: function () {
                    $("modal-content-ajax").html(content);
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                },
                success: function (data) {
                    $("#modal-content-ajax").html(data);
                }
            });

            return false;
        }

        function createNewJournal() {
            var url = "{{ path('cashjournal.journal.create')}}";

            $.ajax({
                url: url,
                type: "post",
                data: $("#entity-form-new").serialize(),
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                },
                success: function (data) {
                    if (data.length > 0) {
                        $("#flash-message-overlay").empty();
                        $("#flash-message-overlay").append(data);
                    } else {
                        window.location.href = "{{ path('cashjournal.overview') }}";
                    }
                }
            });

            return false;
        }    
        function addJournalEntry(journalId) {
            var url = "{{ path('cashjournal.journal.entry.new') }}";
            var content = '<div class="modal-body">' +
                    '     <img src="{{ app.request.basepath }}/resources/images/ajax-loader.gif" />' +
                    '</div>';

            $(".modal-header .modal-title").html("{{ 'journal.entry.add'|trans }}");

            $("#modal-content-ajax").html(content);

            $.ajax({
                url: url,
                type: "get",
                data: { id: journalId },
                beforeSend: function () {
                    $("modal-content-ajax").html(content);
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                },
                success: function (data) {
                    $("#modal-content-ajax").html(data);
                }
            });

            return false;
        }

        function createNewJournalEntry() {
            var url = "{{ path('cashjournal.journal.entry.create')}}";
            var journalId = $("#entity-form-new").find("input[name=id]").val();
            $.ajax({
                url: url,
                type: "post",
                data: $("#entity-form-new").serialize(),
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                },
                success: function (data) {
                    if (data.length > 0) {
                        $("#flash-message-overlay").empty();
                        $("#flash-message-overlay").append(data);
                    } else {
                        var url = "{{ path('cashjournal.journal.entry.index', {'id': 'placeholder'}) }}";
                        url = url.replace("placeholder", journalId);
                        window.location.href = url;
                    }
                }
            });

            return false;
        }
        
        function getJournal(id) {
            var url = "{{ path('cashjournal.journal', {'id': 'placeholder'}) }}";
            url = url.replace("placeholder", id);
            var content = '<div class="modal-body">' +
                    '     <img src="{{ app.request.basepath }}/resources/images/ajax-loader.gif" />' +
                    '</div>';

            $(".modal-header .modal-title").html("{{ 'journal.edit'|trans }}");

            $("#modal-content-ajax").html(content);

            $.ajax({
                url: url,
                type: "get",
                data: { },
                beforeSend: function () {
                    $("modal-content-ajax").html(content);
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                },
                success: function (data) {
                    $("#modal-content-ajax").html(data);
                }
            });

            return false;
        }
        
        function editJournal(id) {
            var url = "{{ path('cashjournal.journal.edit', {'id': 'placeholder'}) }}";
            url = url.replace("placeholder", id);

            $.ajax({
                url: url,
                type: "post",
                data: $("#entity-form-new").serialize(),
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                },
                success: function (data) {
                    if (data.length > 0) {
                        $("#flash-message-overlay").empty();
                        $("#flash-message-overlay").append(data);
                    } else {
                        location.reload();
                    }
                }
            });

            return false;
        }
        
        function editJournalStatus(id, status) {
            var url = "{{ path('cashjournal.journal.edit.status', {'id': 'placeholder'}) }}";
            url = url.replace("placeholder", id);

            $.ajax({
                url: url,
                type: "post",
                data: { status: status},
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                },
                success: function (data) {
                    location.reload();
                }
            });

            return false;
        }
        
        {% if is_granted('ROLE_ADMIN') %}
        function doDeleteJournal(entryId) {
            var form = "#deleteForm";
            var url = "{{ path('cashjournal.journal.delete', {'id': 'placeholder'}) }}";
            url = url.replace("placeholder", entryId);

            $.ajax({
                url: url,
                type: "post",
                data: $(form).serialize(),
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                },
                success: function (data) {
                    location.reload();
                }
            });
            return false;
        }
        {% endif %}
    </script>
{% endblock %}