{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} -  {{ 'reservationorigin.title'|trans }}
{% endblock %}

{% block description %}
    {{ parent() }} -  {{ 'reservationorigin.description'|trans }}
{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-secondary" onclick="showCreateOriginForm()" data-toggle="modal"
                    data-target="#modalCenter">
                <i class="fas fa-plus"></i> {{ 'reservationorigin.add'|trans }}</button>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>{{ 'reservationorigin.name'|trans }}</th>
                    <th>{{ 'base.action'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for origin in origins %}
                    <tr>
                        <td>{{ origin.name }}</td>
                        <td>
                            <a href="#" title="{{ 'button.details'|trans }}" data-toggle="modal" data-target="#modalCenter">
                                <i onclick="getEntity({{ origin.id }})" class="fas fa-info-circle"></i></a>
                            <a href="#" title="{{ 'button.edit'|trans }}" data-toggle="modal" data-target="#modalCenter">
                                <i onclick="editEntry({{ origin.id }})" class="fas fa-edit"></i></a>
                            <a href="#" title="{{ 'button.delete'|trans }}">
                                <i onclick="deleteOrigin({{ origin.id }})" class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    <tr id="entry-{{ origin.id }}" class="d-none">
                        <td colspan="2" id="entry-cell-{{ origin.id }}">
                            <img src="{{ app.request.basepath }}/resources/images/ajax-loader.gif"/>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ app.request.basepath }}/resources/js/settings.js"></script>
    <script>

    $.ajaxSetup({
        cache: false
    });
    </script>
{% endblock %}
{% block bodyjs %}
    {{ parent() }}
    <script>
    $(function() {
        // the default modal width is used here
        $("#modalCenter .modal-dialog").removeClass('modal-lg');
    });

    function getEntity(id) {
        let url = replacePlaceholder("{{ path('reservationorigin.get.origin', {'id': 'placeholder'}) }}", id);
        getContentForModal(url);
        
    }
    
    function editEntry(id) {
        let url = replacePlaceholder("{{ path('reservationorigin.get.origin', {'id': 'placeholder'}) }}", id);
        getContentForModal(url, "", function() {
            enableEditForm(id);
        });
        
    }

    function saveOrigin(id) {
        var form = "#origin-form-" + id;
        var url = "{{ path('reservationorigin.edit.origin', {'id': 'placeholder'}) }}";
        url = url.replace("placeholder", id);

        $.ajax({
            url: url,
            type: "post",
            data: $(form).serialize(),
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
            },
            success: function (data) {
                location.reload();
            }
        });

        return false;
    }

    function deleteOrigin(id) {
        if (collapseEntry(id)) {
            var cell = "#entry-cell-" + id;
            var url = "{{ path('reservationorigin.delete.origin', {'id': 'placeholder'}) }}";
            url = url.replace("placeholder", id);

            $(cell).load(url, function (response, status, xhr) {
                //if(status == "success") location.reload();
            });
        }


        return false;
    }

    function doDeleteEntry(id) {
        var form = "#entry-form-" + id;
        var url = "{{ path('reservationorigin.dodelete.origin', {'id': 'placeholder'}) }}";
        url = url.replace("placeholder", id);

        $.ajax({
            url: url,
            type: "post",
            data: $(form).serialize(),
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
            },
            success: function (data) {
                location.reload();
            }
        });

        return false;
    }

    function showCreateOriginForm() {
        getContentForModal("{{ path('reservationorigin.new.origin') }}");
    }

    function createNewOrigin() {
        var url = "{{ path('reservationorigin.create.origin')}}";

        $.ajax({
            url: url,
            type: "post",
            data: $("#origin-form-new").serialize(),
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
            },
            success: function (data) {
                if (data.length > 0) {
                    $("#flash-message-overlay").empty();
                    $("#flash-message-overlay").append(data);
                } else {
                    window.location.href = "{{ path('reservationorigin.overview') }}";
                }
            }
        });

        return false;
    }
    </script>
{% endblock %}
