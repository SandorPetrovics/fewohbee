<div class="modal-body pl-5 pr-5">
    <div id="flash-message-overlay">
        <div class="col">
        </div>
    </div>
    <div class="row">
        <div class="col">                
            <input type="text" class="form-control" id="lastname" name="lastname"
                   placeholder="{{ 'reservation.select.customer.search.input.placeholder'|trans }}">
        </div>
        <div class="col text-right">
            <span class="input-group-btn">
                <button class="btn btn-secondary" type="button" onclick="getCustomers(1, 'edit')">
                    <i class="fas fa-search"></i> {{ 'nav.customer.search'|trans }}
                </button>
                <button class="btn btn-secondary" type="button" onclick="getFormForNewCustomer()">
                    <i class="fas fa-plus"></i> {{ 'nav.customer.add'|trans }}
                </button>
            </span>
        </div>
    </div>
    <div class="row mt-4">   
        <div class="col">
            <form id="customer-selection" class="form-horizontal" role="form"
                  onsubmit="return editReservationNewCustomer({{ reservation.id }})">

                <div id="customers">
                </div>
                <input type="submit" value="{{ 'button.save'|trans }}" class="btn btn-primary float-right mt-3 d-none"/>
                <input id="reservation-id" type="hidden" value="{{ reservation.id }}" name="reservation-id"/>
                <input id="tab" type="hidden" value="guest" name="tab"/>
            </form>
        </div>
    </div>
</div>
<div id="createNewCustomerFooter" class="modal-footer">
    <ul class="pagination mr-auto">
        <li class="page-item " onclick="return showAddReservationsForm()">
            <a class="page-link" href="#">&larr; {{ 'button.back'|trans }}</a></li>
    </ul>
</div>
<script type="text/javascript">
    // enable keyup for search
    $("#lastname").delayKeyup(function () {
        getCustomers(1, 'edit');
    }, 400);
</script>