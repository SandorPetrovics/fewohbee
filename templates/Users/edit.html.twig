{{ form_start(form, {'attr': {'id':'entry-form-'~user.id, 'onsubmit':'return saveUser('~ user.id ~');'} }) }}
    <div class="modal-body ps-5 pe-5">
        <div id="flash-message-overlay">
        </div>
        <div class="row" id="edit-button-area">
            <div class="col">
                <h4 class="pb-2">
                    <small>
                    <a href="#" onclick="return enableEditForm({{ user.id }})"
                       title="{{ 'button.edit'|trans }}" class="float-end text-secondary">
                            <i class="fas fa-edit"></i></a>
                    </small>
                </h4>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ include('Users/_form.html.twig') }}
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'button.cancel'|trans }}</button>
        <input type="submit" value="{{ 'button.save'|trans }}" id="entry-submit-{{ user.id }}"
               class="btn btn-primary d-none"/>
    </div>
{{ form_end(form) }}
